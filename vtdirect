#!/bin/sh
#
# run a program directly on the virtual terminal

[ $# -lt 1 ] && echo "program to run missing" && exit 1

if ! $SCROLLBACK false || ! [ "$SCROLLBACKPTS" == $(tty) ];
then
	exec "${@}"
	exit 1
fi

SCRIPT=$HOME/.scrollback.$SCROLLBACKNO

cat /dev/null					>  $SCRIPT
env | sed 's,^,export ,'			>> $SCRIPT
echo "cd $(pwd)"				>> $SCRIPT
echo -n "$1"					>> $SCRIPT
while [ $# -ge 2 ];
do
	echo -n "$2" | sed "
		s,','\"'\"',g
		s,^, ',
		s,$,',
	"					>> $SCRIPT
	shift 1
done
echo						>> $SCRIPT

echo -en '\033[0v'
read
